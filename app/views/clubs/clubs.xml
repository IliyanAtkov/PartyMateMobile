<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
	<Page.actionBar>
   		<ActionBar title="Clubs">
        	<ActionBar.actionItems>
         		<ActionItem ios.systemIcon="15" android.systemIcon = "ic_menu_refresh" tap="refreshTap"/>
      		</ActionBar.actionItems>
    	</ActionBar>
  	</Page.actionBar>
	<StackLayout>
    	<SearchBar hint="SEARCH" id="searchBar" hint="Search clubs.." />
    	<StackLayout  orientation="horizontal">
    		<Image src="{{ clubImage }}" stretch="none"/> 
    		<Label text="{{ currentLocationClubText }}" textWrap="true" id="clubText" tap="currentLocationClubTap"/>
    	</StackLayout>
    	 <ListView items="{{ clubsToVisualize }}" itemTap="clubsItemTap" class="clubsList">
    	 	   <ListView.itemTemplate>
    	 	   	<StackLayout orientation="horizontal">
   				    <Image src="{{ image }}" stretch="none" />
   				    <Label text="{{ name }}" stretch="none" />
   				</StackLayout>
   			 </ListView.itemTemplate>
    	 </ListView>
  	</StackLayout>
</Page>