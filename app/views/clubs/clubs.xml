<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <Page.actionBar>
        <ActionBar title="Clubs">
            <ActionBar.actionItems>
                <ActionItem ios.systemIcon="15" android.systemIcon="ic_menu_refresh" tap="refreshTap" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <SearchBar hint="SEARCH" id="searchBar" hint="Search clubs.." />
        <GridLayout rows="100" columns="*,2*" class="current-location-club-grid">
            <Image src="{{ clubImage }}" stretch="aspectFit" col="0" />
            <Label text="{{ clubText }}" textWrap="true" id="clubText" tap="clubTap" col="1" verticalAlignment="center"/>
        </GridLayout>
        <ListView items="{{ clubsToVisualize }}" itemTap="clubsItemTap" height="150" class="clubsList" id="clubsListView">
            <ListView.itemTemplate>
                <StackLayout orientation="horizontal" height="60">
                    <Image src="{{ ProfilePicUrl }}" stretch="none" />
                    <Label text="{{ Name }}" stretch="none" verticalAlignment="center" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
