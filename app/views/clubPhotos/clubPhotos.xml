<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatedTo="pageNavigatedTo">
    <TabView selectedIndexChanged="indexChange">
        <TabView.items>
            <TabViewItem title="Photos" tap="btn">
                <TabViewItem.view>
                    <StackLayout>
                         <ListView items="{{ photos }}">
                            <ListView.itemTemplate width="100">
                                <StackLayout>
                                    <Image src="{{ image }}" stretch="none" />
                                    <Button text="Like" />
                                    <Button text="Dislike" />
                                </StackLayout>
                            </ListView.itemTemplate>
                        </ListView>
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Add photo">
                <TabViewItem.view>
                    <StackLayout>
                        <Label text="text"/>
                    </StackLayout>
                </TabViewItem.view>
                 </TabViewItem>
            <TabViewItem title="Reviews">
                  <TabViewItem.view>
                    <StackLayout>
                       <Label text="Tell us what you thinking: " />
                       <TextView text="" id="userOpinion" />
                       <Button text="Submit" tap="submitBtn" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
</Page>